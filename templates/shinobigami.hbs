<div>
    <section class="content">
        <div class="tab" data-group="party">
            <div class="table-row header">
                {{> "modules/party-overview/templates/parts/FilterButton.html"}}
                <div class="text" style="flex-grow: 5;">Name</div>

                <div class="text" title="{{localize "Shinobigami.A1"}}"><i class="fa-solid fa-screwdriver-wrench"></i></div>
                <div class="text" title="{{localize "Shinobigami.B1"}}"><i class="fa-solid fa-hand-fist"></i></div>
                <div class="text" title="{{localize "Shinobigami.C1"}}"><i class="fa-solid fa-user-ninja"></i></div>
                <div class="text" title="{{localize "Shinobigami.D1"}}"><i class="fa-solid fa-hamsa"></i></div>
                <div class="text" title="{{localize "Shinobigami.E1"}}"><i class="fa-solid fa-person-military-rifle"></i></div>
                <div class="text" title="{{localize "Shinobigami.F1"}}"><i class="fa-solid fa-ghost"></i></div>
                <div class="text" title="{{localize "Shinobigami.HP"}}"><i class="fas fa-heart"></i></div>
            </div>

            {{#each actors as | actor | }}
            <div class="table-row">
                {{> "modules/party-overview/templates/parts/ToggleVisibilityButton.html" actor=actor}}
                <div class="text" style="flex-grow: 5;">{{ actor.name }}</div>

                <div class="text">
                    {{#if state0}}
                    <i class="value fas fa-times" style="color: gray"></i>
                    {{else}}
                    <i class="value fas fa-check"></i>
                    {{/if}}
                </div>

                <div class="text">
                    {{#if state1}}
                    <i class="value fas fa-times" style="color: gray"></i>
                    {{else}}
                    <i class="value fas fa-check"></i>
                    {{/if}}
                </div>

                <div class="text">
                    {{#if state2}}
                    <i class="value fas fa-times" style="color: gray"></i>
                    {{else}}
                    <i class="value fas fa-check"></i>
                    {{/if}}
                </div>

                <div class="text">
                    {{#if state3}}
                    <i class="value fas fa-times" style="color: gray"></i>
                    {{else}}
                    <i class="value fas fa-check"></i>
                    {{/if}}
                </div>

                <div class="text">
                    {{#if state4}}
                    <i class="value fas fa-times" style="color: gray"></i>
                    {{else}}
                    <i class="value fas fa-check"></i>
                    {{/if}}
                </div>

                <div class="text">
                    {{#if state5}}
                    <i class="value fas fa-times" style="color: gray"></i>
                    {{else}}
                    <i class="value fas fa-check"></i>
                    {{/if}}
                </div>

                <div class="text">
                    {{ hp.value }}/{{ hp.max }}
                </div>

            </div>
            {{/each}}
        </div>
    </section>
</div>